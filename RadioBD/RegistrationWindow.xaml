<Window x:Class="RadioBD.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioBD"
        mc:Ignorable="d"
        Title="Окно Регистрации" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FF9B65CC" LayoutUpdated="Grid_LayoutUpdated">
        <TextBox x:Name="TbLogin" TextWrapping="Wrap"  Width="176" Height="34" VerticalAlignment="Top" Margin="0,200,0,0" FontSize="18" Background="White"/>
        <Label Content="Логин:"  FontSize="24" FontFamily="Segoe UI Black" VerticalAlignment="Top" Margin="0,200,270,0" Width="100"/>
        <Label Content="Пароль:" FontSize="24" FontFamily="Segoe UI Black" VerticalAlignment="Top" Margin="0,270,300,0" Width="110"/>
        <PasswordBox x:Name="PbPassword" Width="176" VerticalAlignment="Top" Height="34" FontSize="18" MaxLength="50" PasswordChar="*" Margin="0,270,0,0"/>
        <Image Height="100"  Width="100" Source="/sign-in-icon.jpg" VerticalAlignment="Top" Margin="0,90,0,0"/>
        <Button x:Name="BtRegister" Content="Создать аккаунт" FontSize="24"  VerticalAlignment="Top" Click="BtRegister_Click" Cursor="Hand" Margin="292,317,292,0" Height="53" Background="#FFF4F4F4"/>
        <Image x:Name="ImgLockPass" Height="35" Width="40" Source="/lockpass.png" VerticalAlignment="Top" Margin ="230,270,0,0" Cursor="Hand" MouseDown="ImgLockPass_MouseDown"/>
        <Image x:Name="ImgUnlockPass" Height="35"  Width="40" Source="/unlockpass.png" Cursor="Hand" VerticalAlignment="Top" Margin ="230,270,0,0" MouseDown="ImgUnlockPass_MouseDown"/>
        <TextBox x:Name="TbPassword" TextWrapping="Wrap"  Width="176" Height="34" FontSize="18" VerticalAlignment="Top" Margin="0,270,0,0"/>
        <Label x:Name="LCaps" Content="" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="300" Margin="0,0,500,0"/>
        <Label x:Name="LLanguage" Content="" FontSize ="18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="500,0,0,0" Width="290"/>
        <Border BorderBrush="#FFAF39DA" BorderThickness="1"  VerticalAlignment="Top" Background="#FFAF39DA" Height="70" Margin="0,0,0,0"/>
        <Label Content="Окно регистрации" FontSize="36" VerticalAlignment="Top" Width="330" Margin="0,0,0,0"/>
    </Grid>
</Window>
